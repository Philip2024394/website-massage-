{
  // ðŸ”’ CRITICAL FILE PROTECTION - PRODUCTION APP WITH ACTIVE MEMBERS
  // DO NOT REMOVE THESE SETTINGS - Required for file safety
  
  // Disable ALL auto-save and auto-formatting
  "files.autoSave": "off",
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  
  // Disable ALL auto-refactoring
  "editor.codeActionsOnSave": {},
  "editor.linkedEditing": false,
  "editor.renameOnType": false,
  
  // Disable ALL auto-suggestions that modify code
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "off",
  
  // Disable auto-import updates
  "typescript.updateImportsOnFileMove.enabled": "never",
  "javascript.updateImportsOnFileMove.enabled": "never",
  
  // Disable Prettier if installed
  "prettier.enable": false,
  
  // Disable ESLint auto-fix
  "eslint.autoFixOnSave": false,
  "eslint.format.enable": false,
  
  // Confirmation required for deletions
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  
  // Git safety
  "git.confirmSync": true,
  "git.confirmEmptyCommits": true,
  
  // Require manual save
  "files.hotExit": "off",
  
  "files.watcherExclude": {
    "**/*.json": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/.git/**": true,
    "**/out/**": true,
    "**/coverage/**": true,
    "**/tests/html-debug/**": true,
    "**/*-debug*.html": true,
    "**/*-test*.html": true,
    "**/check-*.html": true,
    "**/test-*.html": true,
    "**/diagnose-*.html": true,
    "**/populate-*.html": true,
    "**/debug-*.html": true,
    "**/.cache/**": true,
    "**/.vite/**": true,
    "**/node_modules/.cache/**": true,
    "**/.turbo/**": true,
    "**/pnpm-lock.yaml": true,
    "**/*.tsbuildinfo": true,
    "**/*.mjs": true,
    "**/bulk-*.mjs": true,
    "**/check-*.mjs": true,
    "**/audit-*.mjs": true,
    "**/analyze-*.mjs": true
  },

  "search.exclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/out/**": true,
    "**/tests/html-debug/**": true,
    "**/*-debug*.html": true,
    "**/*-test*.html": true,
    "**/check-*.html": true,
    "**/test-*.html": true,
    "**/diagnose-*.html": true,
    "**/populate-*.html": true,
    "**/debug-*.html": true,
    "**/.cache/**": true,
    "**/.vite/**": true,
    "**/pnpm-lock.yaml": true,
    "**/*.mjs": true,
    "**/bulk-*.mjs": true,
    "**/check-*.mjs": true,
    "**/audit-*.mjs": true,
    "**/analyze-*.mjs": true,
    "**/*.md": true
  },

  "files.exclude": {
    "**/tests/html-debug/**": true,
    "**/*-debug*.html": true,
    "**/*-test*.html": true,
    "**/check-*.html": true,
    "**/test-*.html": true,
    "**/diagnose-*.html": true,
    "**/populate-*.html": true,
    "**/debug-*.html": true,
    "**/*.mjs": true,
    "**/bulk-*.mjs": true,
    "**/check-*.mjs": true,
    "**/audit-*.mjs": true,
    "**/analyze-*.mjs": true,
    "**/*.md": true
  },

  "files.associations": {
    "*.json": "plaintext"
  },
  "json.validate.enable": false,
  "json.schemaDownload.enable": false,
  "editor.largeFileOptimizations": true,

  "typescript.tsserver.maxTsServerMemory": 12288,
  "files.maxMemoryForLargeFilesMB": 8192,
  "typescript.tsserver.useSeparateSyntaxServer": true,
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents"
  },

  "editor.codeLens": false,
  "git.autorefresh": false,
  "typescript.surveys.enabled": false,
  "editor.semanticHighlighting.enabled": false,
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "editor.lightbulb.enabled": "off",
  "editor.hover.enabled": "off",
  "editor.parameterHints.enabled": false,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "editor.suggestOnTriggerCharacters": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.tabCompletion": "off",
  "editor.wordBasedSuggestions": "off",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,

  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.enablePersistentSessions": false,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 5,
  "workbench.editor.limit.perEditorGroup": true,
  "editor.maxTokenizationLineLength": 10000,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "files.autoSave": "off",
  "files.hotExit": "off",
  
  // TypeScript Language Server Performance Settings
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.tsserver.log": "off",
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.enabled": false,
  "javascript.suggest.enabled": false,
  "html.suggest.html5": false,
  "css.lint.enabled": false,
  "scss.lint.enabled": false,
  "less.lint.enabled": false,
  "json.validate.enable": false,
  
  // Tailwind CSS IntelliSense and validation settings
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore", 
  "css.customData": [".vscode/tailwind.json"],
  "css.validate": false,
  "scss.validate": false,
  
  // i18n-ally extension settings
  "i18n-ally.localesPaths": [
    "src/translations"
  ],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.displayLanguage": "en",
  "i18n-ally.enabledFrameworks": ["general"],
  "i18n-ally.extract.keygenStyle": "camelCase",
  
  "git.decorations.enabled": false,
  "scm.diffDecorations": "none"
}

