{
  "localeStructure": "file",
  "localesFolder": "./src/translations",
  "localesPaths": [
    "./src/translations/*.json",
    "./src/translations/*.ts"
  ],
  "include": [
    "lib/**/*.{ts,tsx}",
    "pages/**/*.{ts,tsx}",
    "components/**/*.{ts,tsx}",
    "hooks/**/*.{ts,tsx}",
    "context/**/*.{ts,tsx}",
    "app/**/*.{ts,tsx}",
    "src/**/*.{ts,tsx}"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vite",
    "**/*.test.{ts,tsx}"
  ],
  "enablePathParsing": true,
  "pathMatcher": "{locale}",
  "keyMatcherRegex": "(?:(?:i18n|translations|t)\\.t|t)\\s*\\(\\s*['\"]([\\w.]+)['\"]",
  "refactor": true,
  "fullReload": true,
  "forceEnable": true,
  "enabledParsers": ["ts", "tsx", "js", "jsx", "json"],
  "displayLanguage": "en",
  "namespace": true,
  "sourceLanguage": "en",
  "defaultValue": "[MISSING]",
  "showPath": true,
  "pathTemplate": "{locale}",
  "usageFileName": "__i18n_usage__.json"
}
