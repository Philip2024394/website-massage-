{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    /* Performance optimizations */
    "incremental": true,
    "composite": false,
    "tsBuildInfoFile": "./.cache/.tsbuildinfo",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping disabled to avoid TypeScript 7.0 deprecation */
  },
  "include": [
    "src/**/*",
    "translations/**/*",
    "lib/**/*",
    "pages/**/*",
    "hooks/**/*",
    "utils/**/*",
    "components/**/*",
    "types/**/*",
    "*.tsx",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build", 
    "mobile",
    "deleted/**/*",
    "__deleted__/**/*",
    "coverage/**/*",
    "**/.vite/**/*",
    "**/.cache/**/*",
    "**/.turbo/**/*",
    "**/out/**/*",
    "**/*.log",
    "vite.config.ts",
    "*-backup.*",
    "*-old.*",
    "*-new.*",
    "*.full.tsx",
    "*_COMPLETE.tsx",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    // CRITICAL: Exclude oversized files causing VS Code crashes
    "lib/appwriteService.ts",
    "apps/facial-dashboard/src/pages/FacialDashboard.tsx",
    "apps/place-dashboard/src/pages/PlaceDashboard.tsx",
    "src/apps/admin/**/*",
    "components/AppDrawer.tsx",
    // Exclude 53 test HTML files
    "**/*-debug*.html",
    "**/*-test*.html",
    "**/check-*.html",
    "**/test-*.html",
    "**/diagnose-*.html",
    "**/populate-*.html",
    "**/verify-*.html",
    "**/migrate-*.html",
    "**/fix-*.html",
    "**/find-*.html",
    "**/enable-*.html",
    "**/create-*.html",
    "**/count-*.html",
    "**/add-*.html",
    "**/force-*.html"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}