{
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/apps/*": ["./src/apps/*"],
      "@/admin/*": ["./src/apps/admin/*"],
      "@/agent/*": ["./src/apps/agent/*"],
      "@/client/*": ["./src/apps/client/*"],
      "@/therapist/*": ["./src/apps/therapist/*"],
      "@/place/*": ["./src/apps/place/*"],
      "@/hotel/*": ["./src/apps/hotel/*"],
      "@/villa/*": ["./src/apps/villa/*"],
      "@/components/*": ["./components/*"],
      "@/pages/*": ["./pages/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/utils/*": ["./utils/*"],
      "@/types/*": ["./types/*"],
      "src/*": ["./src/*"]
    },

    /* Linting - Incrementally enabling strict mode for enterprise standards */
    "strict": false, // TODO: Enable once all type errors resolved
    "noImplicitAny": false, // TODO: Enable incrementally
    "noUnusedLocals": false, // TODO: Re-enable after comprehensive unused variable cleanup
    "noUnusedParameters": false, // TODO: Re-enable after comprehensive unused parameter cleanup
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": false, // TODO: Enable for null safety
    "strictFunctionTypes": true, // ✅ ENABLED: Type-safe function signatures
    "strictBindCallApply": true // ✅ ENABLED: Type-safe bind/call/apply
  },
  "include": [
    "src/**/*",
    "translations/**/*",
    "lib/**/*",
    "pages/**/*",
    "hooks/**/*",
    "utils/**/*",
    "components/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts",
    "app/**",
    "archived/**",
    "playwright-report/**",
    "test-results/**",
    "*.tsx",
    "*.ts",
    "e2e-tests/**"
  ]
}
