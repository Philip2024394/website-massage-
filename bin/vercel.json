{
  "$comment": "⚠️ THIS PROJECT USES NETLIFY, NOT VERCEL! This file is kept for reference only.",
  "$comment2": "Active deployment configuration is in netlify.toml",
  "framework": null,
  "buildCommand": "pnpm run build:vercel",
  "outputDirectory": "dist",
  "installCommand": "pnpm install --frozen-lockfile",
  "env": {
    "ROLLUP_NO_NATIVE": "1"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    }
  ]
}
